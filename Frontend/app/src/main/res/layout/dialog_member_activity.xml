<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="Member Name"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialog_member_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(Member Username)"
            android:textColor="@color/gray"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_member_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Email: Member email"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_create_room_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a Room"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_member_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_circle_vector"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>